{
    "enable_plugin": {
        "description": "启用插件功能",
        "type": "bool",
        "hint": "全局控制插件是否响应用户请求，关闭后只有Bot管理员能通过私聊使用开关命令",
        "default": true
    },
    "cooldown_seconds": {
        "description": "用户冷却时间(秒)",
        "type": "int",
        "hint": "单个用户连续生成表情包的最小间隔时间",
        "default": 3,
        "min": 0,
        "max": 60
    },
    "generation_timeout": {
        "description": "生成超时时间(秒)",
        "type": "int",
        "hint": "单个表情包生成的最大等待时间，超时将取消生成",
        "default": 30,
        "min": 5,
        "max": 120
    },
    "enable_avatar_cache": {
        "description": "启用头像缓存",
        "type": "bool",
        "hint": "缓存用户头像以提升生成速度",
        "default": true
    },
    "cache_expire_hours": {
        "description": "缓存过期时间(小时)",
        "type": "int",
        "hint": "头像缓存的有效期",
        "default": 24,
        "min": 1,
        "max": 168
    },
    "disabled_templates": {
        "description": "禁用列表",
        "type": "list",
        "hint": "管理员可将不适合当前环境的表情包模板添加到此列表中禁用",
        "default": []
    }
}